{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spaceteam.at/schemas/fms.schema.json",
  "title": "fms",
  "description": "An FMS object",
  "type": "object",
  "properties": {
    "startingTime": {
      "description": "TODO: Define a date format",
      "type": "string",
      "minLength": 1
    },
    "power": {
      "description": "Defines a power state",
      "$ref": "#/definitions/pairArray"
    },
    "connectionQualitySens": {
      "description": "Defines the connection quality",
      "$ref": "#/definitions/pairArray"
    },
    "status": {
      "description": "Defines a status",
      "$ref": "#/definitions/pairArray"
    }
  },
  "definitions": {
    "pair": {
      "title": "pair",
      "description": "A key-value pair containing a key as description and its value",
      "type": "object",
      "properties": {
        "key": {
          "description": "The unique key",
          "type": "string"
        },
        "value": {
          "description": "The key's value",
          "type": "string"
        },
        "valueType": {
          "description": "An enum which contains supported data types",
          "anyOf": [
            {"type": "number"},
            {"type": "boolean"},
            {"type": "string"},
            {
              "type": "string",
              "description": "date format",
              "format": "date-time"
            },
            {
              "$ref": "#/definitions/pairArray"
            }
          ]
        }
      },
      "required": ["key", "value", "valueType"]
    },
    "pairArray": {
      "title": "pairArray",
      "description": "An array of pairs",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/pair"
      }
    }
  }
}
