{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spaceteam.at/schemas/pairs.schema.json",
  "title": "Pairs",
  "description": "An object, containing key-value pairs and their type",
  "type": "object",
  "properties": {
    "valueType": { "$ref": "#/definitions/valueType" },
    "pair-array": { "$ref": "#/definitions/pair-array" }
  },
  "definitions": {
    "pair": {
      "description": "A key-value pair containing a key as description and its value",
      "type": "object",
      "properties": {
        "key": {
          "description": "The unique key",
          "type": "string"
        },
        "value": {
          "description": "The key's value",
          "anyOf": [
            { "type": "number" },
            { "type": "boolean" },
            { "type": "string" },
            {
              "type": "string",
              "$ref": "./date.schema.json"
            },
            {
              "type": "object",
              "$ref": "./pairs.schema.json"
            }
          ]
        },
        "valueType": {
          "description": "An enum which contains supported data types",
          "type": "string",
          "enum": ["number", "boolean", "string", "date", "pair-array"],
          "minLength": 1
        }
      },
      "required": ["key", "value"]
    },
    "pair-array": {
      "description": "An array of pairs",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/pair"
      },
      "uniqueItems": true
    },
    "valueType": {
      "description": "An enum which contains supported data types",
      "type": "string",
      "enum": ["number", "boolean", "string", "date", "pair-array"],
      "minLength": 1
    }
  },
  "required": ["pair-array", "valueType"]
}
